{
  "name": "shopify-theme-customizer",
  "version": "2.0.0",
  "repository": "https://github.com/Maxvien/shopify-theme-customizer.git",
  "author": "Vien Dinh <maxvien@gmail.com>",
  "license": "MIT",
  "scripts": {
    "get": "gulp get",
    "lint": "gulp lint",
    "open": "gulp open",
    "build": "gulp build",
    "watch": "gulp watch",
    "deploy": "gulp deploy",
    "download": "gulp download"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/runtime-corejs3": "^7.14.7",
    "@shopify/themekit": "^1.1.9",
    "autoprefixer": "^9.8.6",
    "eslint": "^7.30.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-livereload": "^4.0.2",
    "gulp-load-plugins": "^2.0.7",
    "gulp-wait": "^0.0.2",
    "parcel-bundler": "^1.12.5",
    "sass": "^1.35.1",
    "yargs": "^17.0.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "javascript",
    "gulp",
    "sass",
    "eslint",
    "vscode",
    "prettier",
    "liquid",
    "shopify",
    "livereload",
    "vscode-extension",
    "shopify-theme",
    "shopify-theme-kit",
    "shopify-theme-check",
    "shopify-theme-customizer"
  ]
}
